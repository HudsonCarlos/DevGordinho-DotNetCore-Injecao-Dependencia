@model ProjetoLivroAspNetMvc01_2013.Models.Fabricante

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Fabricante";
}


<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <span>Tem certeza que deseja deletar este fabricante?</span>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                            @Html.Label("", "ID: ", new { @class = "control-label" })
                            @Html.Label("", Model.FabricanteId.ToString(), new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-6">
                            @Html.LabelFor(model => model.Nome, new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Nome Fabricante", @disabled = "true" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(x => x.FabricanteId)

                                <div class="form-actions no-color">
                                    @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-default" })
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

