@model PostGetModel.Models.Pessoa
@{
    ViewBag.Title = "Validação de Pessoa";
}

<h2>Validação de Pessoa</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Dados da Pessoa</legend>
        <div class="editor-label">
            @Html.LabelFor(x=>x.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.Nome)
            @Html.ValidationMessageFor(x=>x.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.Observacao)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(x => x.Observacao)
            @Html.ValidationMessageFor(x => x.Observacao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.Idade)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.Idade)
            @Html.ValidationMessageFor(x => x.Idade)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.Email)
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.Login)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.Login)
            @Html.ValidationMessageFor(x => x.Login)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.Senha)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(x => x.Senha)
            @Html.ValidationMessageFor(x => x.Senha)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.ConfirmarSenha)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(x => x.ConfirmarSenha)
            @Html.ValidationMessageFor(x => x.ConfirmarSenha)
        </div>

        <p><input type="submit" value="Cadastrar" /></p>

    </fieldset>
}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}